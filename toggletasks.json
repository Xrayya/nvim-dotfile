{
  "tasks": [
    {
      "name": "Echo test",
      "cmd": "echo this is a test"
    },
    {
      "name": "Makefile build",
      "cmd": "make -j",
      "cwd": "${config_dir}",
      "tags": [
        "build",
        "make"
      ]
    },
    {
      "name": "CMake setup",
      "cmd": "mkdir -p build && cd build && cmake ..",
      "cwd": "${config_dir}",
      "tags": [
        "cmake"
      ]
    },
    {
      "name": "CMake build",
      "cmd": "cmake --build build -j",
      "cwd": "${config_dir}",
      "tags": [
        "build",
        "cmake"
      ]
    },
    {
      "name": "Create VS Code Java workspace",
      "cmd": "md \".vscode\" && md \"src\" && md \"lib\" && (echo { & echo   \"java.project.sourcePaths\": [\"src\"], & echo   \"java.project.outputPath\": \"bin\", & echo   \"java.project.referencedLibraries\": [\"lib/**/*.jar\"] & echo }) > .\\.vscode\\settings.json",
      "cwd": "${win_cwd}",
      "tags": [
        "java",
        "setup"
      ]
    }
  ]
}
